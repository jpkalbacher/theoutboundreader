<!DOCTYPE html>
<html>
<head>
  <title>The Outbound Reader</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!-- sign out / navbar only visible when users are logged in -->
  <% if current_user %>
    <div class="main-body">
      <ul>
        <li><a href="http://theoutboundrss.herokuapp.com/">Home</a></li>
        <li><a href="http://theoutboundrss.herokuapp.com/favorites">Favorites</a></li>
        <li><%= link_to "Log out", session_path, :method => :delete %></li>
      </ul>
    </div>
  <% end %>

  <%= yield %>
  <%= flash[:errors].join(", ") if flash[:errors] %>

</body>
</html>
